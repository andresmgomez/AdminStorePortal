@model AdminStorePortal.Entities.RetailProductVM

@{
    ViewData["Title"] = "Index";
}

<div class="ps-main__wrapper">
    <header class="header--dashboard">
        <div class="header__left">
            <h3>Store Products</h3>
            <p>Retail Products List</p>
        </div>
        <div class="header__right">
            <a asp-area="Products" asp-controller="Retail" asp-action="Upsert" class="ps-btn success">
                New Product <i class="bi bi-plus-square ml-5"></i>
            </a>
        </div>
    </header>
    <section class="ps-items-listing">
        <div class="ps-section__content">
            <div class="table-responsive">
                <table class="table ps-table">
                    <thead>
                        <tr>
                            <th>Product No</th>
                            <th>Product Name</th>
                            <th>Product Type</th>
                            <th>Product Size</th>
                            <th>Product Material</th>
                            <th>Product Style</th>
                            <th>Added Date</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            @foreach (var product in Model.LineProducts)
                            {
                            
                                <td>@product.LineProductNo</td>
                                <td>
                                    <a href="#"><strong>@product.Name</strong></a>
                                </td>
                                <td>@product.Type</td>
                                <td>@product.Size</td>
                            }
                            @foreach (var product in Model.FabricProducts)
                            {
                                <td>@product.Material</td>
                                <td>@product.Style</td>
                            }
                            @foreach(var product in Model.LineProducts)
                            {
                                <td class="text-left">@product.AddedDate.ToShortDateString()</td>
                                <td>
                                    <div class="dropdown">
                                        <a id="dropdownMenuButton"
                                           data-toggle="dropdown"
                                           aria-haspopup="true"
                                           aria-expanded="false">
                                            <i class="bi bi-three-dots"></i>
                                        </a>
                                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                            <li>
                                                <a asp-area="Products" asp-controller="Retail" asp-action="Upsert" asp-route-id="@product.Id" class="dropdown-item">Change Product</a>
                                            </li>
                                            <li>
                                                <a asp-area="Store" asp-controller="Outlet" asp-action="Delete" asp-route-id="@product.Id" class="dropdown-item">Remove Product</a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            }
                        </tr>
                    </tbody>
                </table>
             </div>
         </div>
    </section>
</div>

<partial name="_AlertNotification" />