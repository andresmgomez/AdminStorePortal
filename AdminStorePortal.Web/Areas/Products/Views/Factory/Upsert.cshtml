@model FabricProduct

@{
    var pageTitle = "Create Product";
    var pageSubtitle = "New Factory Product";
}

<partial name="_ToastrNotification" />

<div class="ps-main__wrapper">
    <header class="header--dashboard">
        <div class="header__left">
            @if (Model == null)
            {
                <h3>@pageTitle</h3>
                <p>@pageSubtitle</p>
            } else
            {
                <h3>Modify Product</h3>
                <p>Edit Factory Product</p>
            }
        </div>
        <div class="header__right">
            <a asp-area="Store" asp-controller="Products" asp-action="Index" class="header__site-link">
                <span>Go Back</span><i class="bi bi-box-arrow-in-left"></i>
            </a>
        </div>
    </header>
    <form class="ps-form" method="post">
        <div class="ps-form__content">
            <div class="row">
                <div class="col-xs-12 col-sm-11 col-md-9 col-lg-8 col-xl-7">
                    <figure class="ps-block--form-box">
                        <figcaption>Factory Product</figcaption>
                        <div class="ps-block__content">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="Material"></label><sup>*</sup>
                                        <input asp-for="Material" class="form-control" type="text" placeholder="Product Material..." />
                                        <span asp-validation-for="Material" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="Style"></label><sup>*</sup>
                                        <input asp-for="Style" class="form-control" type="text" placeholder="Product Style..." />
                                        <span asp-validation-for="Style" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="Length"></label><sup>*</sup>
                                        <input asp-for="Length" class="form-control" type="text" placeholder="Product Length..." />
                                        <span asp-validation-for="Length" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label asp-for="ChestMeasurement"></label><sup>*</sup>
                                        <input asp-for="ChestMeasurement" class="form-control" type="text" placeholder="Product Chest..." />
                                        <span asp-validation-for="ChestMeasurement" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label asp-for="ShoulderMeasurement"></label><sup>*</sup>
                                        <input asp-for="ShoulderMeasurement" class="form-control" type="text" placeholder="Product Shoulder..." />
                                        <span asp-validation-for="ShoulderMeasurement" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label asp-for="SleeveMeasurement"></label><sup>*</sup>
                                        <input asp-for="SleeveMeasurement" class="form-control" type="text" placeholder="Product Sleeve..." />
                                        <span asp-validation-for="SleeveMeasurement" class="text-danger mt-2"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </figure>
                    <div class="ps-form__bottom">
                    @if (Model == null)
                    {
                        <button class="ps-btn success" type="submit">Add Product</button>
                    }
                    else
                    {
                        <button class="ps-btn success" type="submit">Change Product</button>
                    }
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
