@model LineProduct

@{
    ViewData["Title"] = "Edit";
}

<div class="ps-main__wrapper">
    <header class="header--dashboard">
        <div class="header__left">
            <h3>Modify Product</h3>
            <p>Edit Online Product</p>
        </div>
        <div class="header__right">
            <a asp-controller="Products" asp-action="Index" class="header__site-link">
                <span>Go Back</span><i class="bi bi-box-arrow-in-left"></i>
            </a>
        </div>
    </header>
    <form class="ps-form" method="post">
        <div class="ps-form__content">
            <div class="row">
                <div class="col-sm-12 col-md-10 col-lg-8 col-xl-8">
                    <figure class="ps-block--form-box">
                        <figcaption>Online Product</figcaption>
                        <div class="ps-block__content">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="Name"></label><sup>*</sup>
                                        <input asp-for="Name" class="form-control" type="text" placeholder="Product Name..." />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Brand"></label><sup>*</sup>
                                        <input asp-for="Brand" class="form-control" type="text" placeholder="Product Brand..." />
                                        <span asp-validation-for="Brand" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Price"></label><sup>*</sup>
                                        <input asp-for="Price" class="form-control" type="text" placeholder="Product Price..." />
                                        <span asp-validation-for="Price" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Color"></label><sup>*</sup>
                                        <input asp-for="Color" class="form-control" type="text" placeholder="Product Color..." />
                                        <span asp-validation-for="Color" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Style"></label><sup>*</sup>
                                        <input asp-for="Style" class="form-control" type="text" placeholder="Product Style..." />
                                        <span asp-validation-for="Style" class="text-danger mt-2"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </figure>
                </div>
            </div>
        </div>
        <div class="ps-form__bottom">
            <button class="ps-btn success" type="submit">Change Product</button>
        </div>
    </form>
</div>